<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>smart-writer</servlet-name>
        <servlet-class>com.rd.smartwriter.MyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>post-servlet</servlet-name>
        <servlet-class>com.rd.smartwriter.PostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>post-servlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>smart-writer.jsp</welcome-file>
    </welcome-file-list>
</web-app>

